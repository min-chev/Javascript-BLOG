<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/admin/tags/edit/{{tag.id}}" method="POST">
            <fieldset>
                <legend>Edit Tag</legend>
                <div class="form-group"><label class="col-sm-4 control-label" for="name">Tag Name</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="name" placeholder="Tag Name"
                                                  name="name" value="{{ tag.name }}"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4"><a class="btn btn-default"
                                                             href="/admin/tags/all">Cancel</a>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>