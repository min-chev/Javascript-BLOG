<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/admin/comments/delete/{{comment.id}}" method="POST">
            <fieldset>
                <legend>Delete Comment</legend>
                <div class="form-group"><label class="col-sm-4 control-label" for="name">Comment Content</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="name" placeholder="Comment Content"
                                                  name="name" value="{{ comment.content }}" disabled></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4"><a class="btn btn-default"
                                                             href="/admin/comments/all">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>